@model u22560646_HW3.Models.HomeViewModel
@{
    ViewBag.Title = "Maintain";
}

<div class="container mt-4">
    <h2 class="text-center fw-bold mb-4">Maintain</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
        <!-- STAFF -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <select class="form-select form-select-sm w-auto">
                        <option>Staff list</option>
                    </select>
                    <button class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#createStaffModal">Add</button>
                </div>
                <div class="card-body p-0">
                    @if (Model.Staffs.Any())
                    {
                        foreach (var s in Model.Staffs)
                        {
                            <div class="border-bottom p-3">
                                <strong>@s.FirstName @s.LastName</strong><br />
                                <small class="text-muted">@s.Email | @s.Phone</small><br />
                                <small>@(s.Store?.StoreName ?? "—")</small>

                                @if (Model.StaffSoldItems != null && Model.StaffSoldItems.ContainsKey(s.StaffId))
                                {
                                    <ul class="list-unstyled small mt-2 mb-0">
                                        @foreach (var item in Model.StaffSoldItems[s.StaffId])
                                        {
                                            <li>@item.Product.ProductName</li>
                                        }
                                        @if (Model.StaffSoldItems[s.StaffId].Count < 3)
                                        {
                                            <li class="text-muted">...</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="text-muted small">No sales yet</p>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <p class="p-3 text-muted">No staff found.</p>
                    }
                </div>
                <div class="card-footer text-center">
                    <button class="btn btn-sm btn-outline-primary me-1" data-bs-toggle="modal" data-bs-target="#editStaffModal">Edit</button>
                    <button class="btn btn-sm btn-outline-warning me-1">Update</button>
                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                </div>
            </div>
        </div>

        <!-- CUSTOMERS -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <select class="form-select form-select-sm w-auto">
                        <option>Customer list</option>
                    </select>
                    <button class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#createCustomerModal">Add</button>
                </div>
                <div class="card-body p-0">
                    @if (Model.Customers.Any())
                    {
                        foreach (var c in Model.Customers)
                        {
                            <div class="border-bottom p-3">
                                <strong>@c.FirstName @c.LastName</strong><br />
                                <small class="text-muted">@c.Email | @c.Phone</small><br />
                                <small>@c.City</small>

                                @if (Model.CustomerPurchasedItems != null && Model.CustomerPurchasedItems.ContainsKey(c.CustomerId))
                                {
                                    <ul class="list-unstyled small mt-2 mb-0">
                                        @foreach (var item in Model.CustomerPurchasedItems[c.CustomerId])
                                        {
                                            <li>@item.Product.ProductName</li>
                                        }
                                        @if (Model.CustomerPurchasedItems[c.CustomerId].Count < 3)
                                        {
                                            <li class="text-muted">...</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="text-muted small">No purchases yet</p>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <p class="p-3 text-muted">No customers found.</p>
                    }
                </div>
                <div class="card-footer text-center">
                    <button class="btn btn-sm btn-outline-primary me-1" data-bs-toggle="modal" data-bs-target="#editCustomerModal">Edit</button>
                    <button class="btn btn-sm btn-outline-warning me-1">Update</button>
                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                </div>
            </div>
        </div>

        <!-- PRODUCTS -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <select class="form-select form-select-sm w-auto" onchange="filter('brand', this.value)">
                        <option value="">Product list</option>
                        @foreach (var b in Model.Brands)
                        {
                            <option value="@b.BrandId" selected="@(b.BrandId == Model.SelectedBrandId)">@b.BrandName</option>
                        }
                    </select>
                    <select class="form-select form-select-sm w-auto ms-2" onchange="filter('category', this.value)">
                        <option value="">Filter</option>
                        @foreach (var c in Model.Categories)
                        {
                            <option value="@c.CategoryId" selected="@(c.CategoryId == Model.SelectedCategoryId)">@c.CategoryName</option>
                        }
                    </select>
                    <button class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#createProductModal">Add</button>
                </div>
                <div class="card-body">
                    @if (Model.Products.Any())
                    {
                        foreach (var p in Model.Products.Take(3))
                        {
                            <div class="border rounded p-2 mb-2">
                                <strong>@p.ProductName</strong><br />
                                <small>@p.Brand.BrandName | @p.Category.CategoryName</small><br />
                                <small class="text-success fw-bold">R @p.ListPrice.ToString("F2")</small>
                            </div>
                        }
                        <p class="text-muted small">...</p>
                    }
                    else
                    {
                        <p class="text-muted">No products found.</p>
                    }

                    <div class="text-center mt-3">
                        <img src="~/Content/Images/sample-bike.jpg" class="img-fluid rounded" style="height:100px; object-fit:cover;" alt="Bike" />
                    </div>
                </div>
                <div class="card-footer text-center">
                    <button class="btn btn-sm btn-outline-primary me-1" data-bs-toggle="modal" data-bs-target="#editProductModal">Edit</button>
                    <button class="btn btn-sm btn-outline-warning me-1">Update</button>
                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MODALS (Create Only - Edit/Update/Delete via buttons) -->
<!-- Create Staff -->
<div class="modal fade" id="createStaffModal">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("CreateStaff", "Maintain", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Create Staff</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    @Html.TextBox("FirstName", null, new { @class = "form-control mb-2", placeholder = "First Name" })
                    @Html.TextBox("LastName", null, new { @class = "form-control mb-2", placeholder = "Last Name" })
                    @Html.TextBox("Email", null, new { @class = "form-control mb-2", placeholder = "Email" })
                    @Html.TextBox("Phone", null, new { @class = "form-control mb-2", placeholder = "Phone" })
                    @Html.DropDownList("StoreId", new SelectList(Model.Stores, "StoreId", "StoreName"), "Select Store", new { @class = "form-select" })
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            }
        </div>
    </div>
</div>

<!-- Create Customer -->
<div class="modal fade" id="createCustomerModal">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("CreateCustomer", "Maintain", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Create Customer</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    @Html.TextBox("FirstName", null, new { @class = "form-control mb-2", placeholder = "First Name" })
                    @Html.TextBox("LastName", null, new { @class = "form-control mb-2", placeholder = "Last Name" })
                    @Html.TextBox("Email", null, new { @class = "form-control mb-2", placeholder = "Email" })
                    @Html.TextBox("Phone", null, new { @class = "form-control mb-2", placeholder = "Phone" })
                    @Html.TextBox("City", null, new { @class = "form-control mb-2", placeholder = "City" })
                    @Html.TextBox("ZipCode", null, new { @class = "form-control mb-2", placeholder = "Zip Code" })
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            }
        </div>
    </div>
</div>

<!-- Create Product -->
<div class="modal fade" id="createProductModal">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("CreateProduct", "Maintain", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Create Product</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    @Html.TextBox("ProductName", null, new { @class = "form-control mb-2", placeholder = "Product Name" })
                    @Html.DropDownList("BrandId", new SelectList(Model.Brands, "BrandId", "BrandName"), "Select Brand", new { @class = "form-select mb-2" })
                    @Html.DropDownList("CategoryId", new SelectList(Model.Categories, "CategoryId", "CategoryName"), "Select Category", new { @class = "form-select mb-2" })
                    @Html.TextBox("ModelYear", null, new { @class = "form-control mb-2", placeholder = "Model Year", type = "number" })
                    @Html.TextBox("ListPrice", null, new { @class = "form-control mb-2", placeholder = "List Price", type = "number", step = "0.01" })
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            }
        </div>
    </div>
</div>

<script>function filter(type, value) {
        const url = new URL(window.location);
        if (value) url.searchParams.set(type + 'Id', value);
        else url.searchParams.delete(type + 'Id');
        window.location = url;
    }</script>
