@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - BikeStore</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap CSS CDN (or include via bundles) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f8f1fb;
        }

        .groupbox {
            border: 1px solid #ddd;
            padding: 15px;
            background: #fff;
            border-radius: 6px;
        }

            .groupbox h5 {
                margin-bottom: 12px;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">BikeStore</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navMenu">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Maintain")">Maintain</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Reports")">Reports</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")#staff">Staff</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")#customers">Customers</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")#products">Products</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
